#!/usr/bin/env bash

# This script serves as the Cryptography build step of the
# [**Python Buildpack**](https://github.com/cloudfoundry/python-buildpack)
# compiler.
#
# This script is invoked by [`bin/compile`](/).

# The location of the pre-compiled libffi binary.
VENDORED_LIBFFI="https://lang-python.s3.amazonaws.com/libraries/vendor/libffi.tar.gz"

# Syntax sugar.
source $BIN_DIR/utils

# If a package using cffi exists within requirements, use vendored libffi.
if (pip-grep -s requirements.txt argon2-cffi bcrypt cffi cryptography django[argon2] Django[argon2] django[bcrypt] Django[bcrypt] PyNaCl pyOpenSSL PyOpenSSL requests[security] misaka &> /dev/null) then

  if [ ! -d "$DEPS_DIR/$DEPS_IDX/vendor/lib/libffi-3.2.1" ]; then
    echo "-----> Noticed cffi. Bootstrapping libffi."
    mkdir -p $DEPS_DIR/$DEPS_IDX/vendor

    # Download and extract libffi into target vendor directory.
    exit_code=0
    filtered_url=$($ROOT_DIR/compile-extensions/bin/download_dependency $VENDORED_LIBFFI /tmp)
    echo "filtered uri = $filtered_url"
    $ROOT_DIR/compile-extensions/bin/warn_if_newer_patch $VENDORED_LIBFFI "$ROOT_DIR/manifest.yml"
    echo "Downloaded [$filtered_url]"

    downloaded_file=/tmp/libffi.tar.gz
    tar zxvf $downloaded_file -C $DEPS_DIR/$DEPS_IDX/vendor &> /dev/null
    rm $downloaded_file
  fi

  export LIBFFI=$DEPS_DIR/$DEPS_IDX
  echo $LIBFFI > $ENV_DIR/LIBFFI

  pushd $DEPS_DIR/$DEPS_IDX/lib >/dev/null
    ln -s ../vendor/lib/libffi.* .
  popd >/dev/null
  pushd $DEPS_DIR/$DEPS_IDX/pkgconfig >/dev/null
    ln -s ../vendor/lib/pkgconfig/* .
  popd >/dev/null
  pushd $DEPS_DIR/$DEPS_IDX/include >/dev/null
    ln -s ../vendor/lib/libffi-3.2.1/include/* .
  popd >/dev/null
fi
