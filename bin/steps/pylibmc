#!/usr/bin/env bash

# This script serves as the Pylibmc build step of the
# [**Python Buildpack**](https://github.com/cloudfoundry/python-buildpack)
# compiler.
#
# This script is invoked by [`bin/compile`](/).

# The location of the pre-compiled libmemcached binary.
VENDORED_MEMCACHED="https://lang-python.s3.amazonaws.com/libraries/vendor/libmemcache.tar.gz"

# Syntax sugar.
source $BIN_DIR/utils

# If pylibmc exists within requirements, use vendored libmemcached.
if (pip-grep -s requirements.txt pylibmc &> /dev/null) then

  if [ ! -d "$DEPS_DIR/$DEPS_IDX/vendor/lib/sasl2" ]; then
    echo "-----> Noticed pylibmc. Bootstrapping libmemcached."
    mkdir -p $DEPS_DIR/$DEPS_IDX/vendor
 
    # Download and extract libmemcached into target vendor directory.
    exit_code=0
    filtered_url=$($ROOT_DIR/compile-extensions/bin/download_dependency $VENDORED_MEMCACHED /tmp)
    $ROOT_DIR/compile-extensions/bin/warn_if_newer_patch $VENDORED_MEMCACHED "$ROOT_DIR/manifest.yml"
    echo "Downloaded [$filtered_url]"

    downloaded_file=/tmp/libmemcache.tar.gz
    tar zxvf $downloaded_file -C $DEPS_DIR/$DEPS_IDX/vendor &> /dev/null
    rm $downloaded_file
  fi

  export LIBMEMCACHED=$DEPS_DIR/$DEPS_IDX/vendor
  echo $LIBMEMCACHED > $ENV_DIR/LIBMEMCACHED

  pushd $DEPS_DIR/$DEPS_IDX/lib >/dev/null
    ln -sf ../vendor/lib/lib*.* .
    ln -s ../vendor/lib/sasl2/* .
  popd >/dev/null
  pushd $DEPS_DIR/$DEPS_IDX/pkgconfig >/dev/null
    ln -sf ../vendor/lib/pkgconfig/* .
  popd >/dev/null
  pushd $DEPS_DIR/$DEPS_IDX/include >/dev/null
    ln -s ../vendor/include/* .
  popd >/dev/null
fi
